  <div class="container-fluid">
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Print as pdf", print_path(id: "#{@production.id}", format: "pdf"), :method => :get, target: '_blank'  %></li>
      <li class="bottom-button inventory-toggle"><a href="/">Inventory</a></li>
      <li class="bottom-button library-toggle"><a href="/">Library</a></li>
    </ul>
  </div>
